<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sep.vectorcalculator.TwoVectorsAdditionActivity$PlaceholderFragment">

    <include layout="@layout/coordinates_fragment"
        android:id="@+id/include" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vector 1"
        android:id="@+id/threeaddition_textViewV1"
        android:layout_alignTop="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="96dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="y1"
        android:id="@+id/threeaddition_textViewY1"
        android:layout_alignTop="@+id/threeaddition_textViewX1"
        android:layout_toRightOf="@+id/threeaddition_calculateButton"
        android:layout_toEndOf="@+id/threeaddition_calculateButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="x1"
        android:id="@+id/threeaddition_textViewX1"
        android:layout_alignTop="@+id/threeaddition_textViewV1"
        android:layout_toLeftOf="@+id/threeaddition_calculateButton"
        android:layout_toStartOf="@+id/threeaddition_calculateButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/threeaddition_calculateButton"
        android:layout_below="@+id/threeaddition_textViewX2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vector 2"
        android:id="@+id/threeaddition_textViewV2"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/threeaddition_textViewV1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="x2"
        android:id="@+id/threeaddition_textViewX2"
        android:layout_alignTop="@+id/threeaddition_textViewV2"
        android:layout_alignLeft="@+id/threeaddition_textViewX1"
        android:layout_alignStart="@+id/threeaddition_textViewX1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="y2"
        android:id="@+id/threeaddition_textViewY2"
        android:layout_alignTop="@+id/threeaddition_textViewX2"
        android:layout_toRightOf="@+id/threeaddition_calculateButton"
        android:layout_toEndOf="@+id/threeaddition_calculateButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/threeaddition_editTextX1"
        android:layout_alignTop="@+id/threeaddition_textViewY1"
        android:layout_alignRight="@+id/threeaddition_calculateButton"
        android:layout_alignEnd="@+id/threeaddition_calculateButton"
        android:layout_alignLeft="@+id/threeaddition_calculateButton"
        android:layout_alignStart="@+id/threeaddition_calculateButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/twoaddition_editTextY1"
        android:layout_alignBottom="@+id/threeaddition_editTextX1"
        android:layout_alignRight="@+id/include"
        android:layout_alignEnd="@+id/include"
        android:layout_toRightOf="@+id/threeaddition_textViewY1"
        android:layout_toEndOf="@+id/threeaddition_textViewY1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/threeaddition_editTextX2"
        android:layout_alignTop="@+id/threeaddition_textViewX2"
        android:layout_alignRight="@+id/threeaddition_editTextX1"
        android:layout_alignEnd="@+id/threeaddition_editTextX1"
        android:layout_alignLeft="@+id/threeaddition_editTextX1"
        android:layout_alignStart="@+id/threeaddition_editTextX1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/threeaddition_editTextY2"
        android:layout_alignTop="@+id/threeaddition_textViewY2"
        android:layout_toRightOf="@+id/threeaddition_textViewY2"
        android:layout_toEndOf="@+id/threeaddition_textViewY2" />


</RelativeLayout>
