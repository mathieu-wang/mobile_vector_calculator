<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cartesian"
        android:id="@+id/radioButtonCartesian"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Polar"
        android:id="@+id/radioButtonPolar"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/radioButtonCartesian"
        android:layout_toEndOf="@+id/radioButtonCartesian"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_alignBottom="@+id/radioButtonCartesian" />
</RelativeLayout>
